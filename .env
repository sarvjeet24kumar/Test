# Environment Configuration Template
# Copy this file to .env and fill in the values

# Application
APP_NAME=MiniMart
APP_ENV=development
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:1234@localhost:5432/minimart

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TOKEN_DB=1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Invitation Token
INVITATION_TOKEN_EXPIRE_HOURS=24
INVITATION_BASE_URL=http://localhost:3000/invite

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@minimart.com
EMAIL_FROM_NAME=MiniMart

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_INVITATION=10/hour
RATE_LIMIT_API=100/minute

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
